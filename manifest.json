{
    "manifest_version": 3,
    "name": "Gemini 목차 생성기",
    "version": "1.0",
    "description": "Gemini 채팅에서 AI가 자동으로 목차를 생성합니다. 긴 대화도 한눈에 파악하고 빠르게 이동하세요.",
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://gemini.google.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
